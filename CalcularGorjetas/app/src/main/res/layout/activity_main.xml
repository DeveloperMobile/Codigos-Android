<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:padding="16dp">

    <!-- TableRow 0 -->
    <TableRow>

        <TextView
            android:id="@+id/lblTotalConta"
            android:text="@string/total_conta"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginEnd="5dp"/>

        <EditText
            android:id="@+id/edtTotalConta"
            android:layout_span="3"
            android:inputType="numberDecimal"
            android:text="@string/valor_default"
            android:textAlignment="center"
            android:background="@android:drawable/edit_text"/>

    </TableRow>

    <!-- TableRow 1 -->
    <TableRow>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_span="4"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/rbDez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/dez_porcento" />

            <RadioButton
                android:id="@+id/rbQuinze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quinze_porcento" />

            <RadioButton
                android:id="@+id/rbVinte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vinte_porcento" />
        </RadioGroup>

    </TableRow>

    <!-- TableRow 2 -->
    <TableRow android:gravity="end">

        <Button
            android:id="@+id/btnCalcular"
            android:text="@string/calcular" />

    </TableRow>

</TableLayout>
